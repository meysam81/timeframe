{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "at any time"
    ]
  },
  "packageRules": [
    {
      "automerge": true,
      "automergeStrategy": "rebase",
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ]
    }
  ]
}
